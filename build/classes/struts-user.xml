<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC  
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
    "http://struts.apache.org/dtds/struts-2.0.dtd">  
  
<struts>  
   
    <include file="struts-default.xml" />  
    <package name="photography" extends="struts-default">
        <!-- 注册 -->  
        <action name="register" class="org.photography.action.RegisterAction" method="register"> 
            <result name="input">/jsps/user/regist.jsp</result>  
            <result name="success">/jsps/user/login.jsp</result>  
            <result name="error">/error.jsp</result>  
        </action>
        
        <!--激活-->
        <action name="activate" class="org.photography.action.ActivateAction" method="activate">  
            <result name="input">/jsps/user/login.jsp</result>  
            <result name="success">/jsps/user/login.jsp</result>  
            <result name="error">/error.jsp</result> 
        </action> 
        
        <!--登陆-->
        <action name="login" class="org.photography.action.LoginAction">  
            <result name="input">/jsps/user/login.jsp</result>  
            <result name="success" type="redirect">/index.jsp</result>  
            <result name="error">/jsps/user/login.jsp</result> 

        </action>  
        
        <!--退出-->
         <action name="logout" class="org.photography.action.LogoutAction">  
            <result name="success" type="redirect">/index.jsp</result>  
            <result name="error">/error.jsp</result>   
         </action>  
        
        <!--更新-->
        <action name="modifyInfo" class="org.photography.action.UserInfoAction" method="modifyInfo"> 
            <result name="input">/jsps/user/modifyUserInfo.jsp</result>  
            <result name="success">/jsps/user/userInfo.jsp</result>  
        </action>  
        
        <!--修改密码-->
        <action name="modifyPassword" class="org.photography.action.UserInfoAction" method="modifyPassword"> 
            <result name="input">/jsps/user/pwd.jsp</result>  
            <result name="success">/jsps/user/userInfo.jsp</result>  
        </action>  
        
         <!--修改头像
        <action name="modifyHead" class="org.photography.action.UserInfoAction" method="modifyHead"> 
            <param name="savePath">/file/headpicture</param>
            <result name="input">/jsps/user/userInfo.jsp</result>  
            <result name="success">/jsps/user/userInfo.jsp</result>  
        </action> -->
        
         <!--修改头像-->
        <action name="modifyHeadPicture" class="org.photography.action.UserInfoAction" method="modifyHeadPicture"> 
            <param name="savePath">/file/headpicture</param>
            <result name="input">/jsps/user/headpicture.jsp</result>  
            <result name="success">/jsps/user/userManager.jsp</result>  
        </action> 
        
        <!--获取激活码-->
        <action name="verifyCode" class="org.photography.action.VerifyCodeAction">  
            <result name="success" type="stream">  
               <param name="contentType">image/jpeg</param>  
               <param name="inputName">imageStream</param>  
               <param name="bufferSize">2048</param>  
            </result>  
        </action> 
        
        <!--验证邮箱-->
        <action name="ajaxValidateEmail" class="org.photography.action.AjaxValidateAction"  method="ajaxValidateEmail">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>  
                <param name="inputName">inputStream</param>  
            </result>
        </action>
        
        <!--验证用户名-->
        <action name="ajaxValidateNickname" class="org.photography.action.AjaxValidateAction"  method="ajaxValidateNickname">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>  
                <param name="inputName">inputStream</param>  
            </result>
        </action>
        
        <!--验证验证码-->
        <action name="ajaxValidateVerifyCode" class="org.photography.action.AjaxValidateAction"  method="ajaxValidateVerifyCode">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>  
                <param name="inputName">inputStream</param>  
            </result>
        </action>
        
    </package>  
     
  
</struts>  