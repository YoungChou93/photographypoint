<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC  
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
    "http://struts.apache.org/dtds/struts-2.0.dtd">  
  
<struts>  
   
    <include file="struts-default.xml" />  
    <package name="photography" extends="struts-default">
        <!-- 注册 -->  
        <action name="register" class="org.photography.action.UserAction" method="register"> 
            <result name="success">/jsps/user/regist.jsp</result>  
            <result name="success">/index.jsp</result>  
            <result name="error">/fail.jsp</result>  
        </action>
        
        <!--激活-->
        <action name="activate" class="org.photography.action.ActivateAction" method="activate">  
            <result name="input">/login.jsp</result>  
            <result name="success">/index.jsp</result>  
            <result name="error">/fail.jsp</result> 
        </action> 
        
        <!--登陆-->
        <action name="login" class="org.photography.action.LoginAction">  
            <result name="input">/jsps/user/login.jsp</result>  
            <result name="success">/index.jsp</result>  
            <result name="error">/jsps/user/login.jsp</result> 

        </action>  
        
        <!--退出-->
         <action name="exit" class="org.photography.action.UserAction" method="exit">   
         </action>  
        
        <!--更新-->
        <action name="modify" class="org.photography.action.UserAction" method="modify">  
        </action>  
        
        <!--获取激活码-->
        <action name="verifyCode" class="org.photography.action.VerifyCodeAction">  
            <result name="success" type="stream">  
                <param name="contentType">image/jpeg</param>  
               <param name="inputName">imageStream</param>  
               <param name="bufferSize">2048</param>  
            </result>  
        </action> 
        
        <!--验证邮箱-->
        <action name="ajaxValidateEmail" class="org.photography.action.AjaxValidateAction"  method="ajaxValidateEmail">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>  
                <param name="inputName">inputStream</param>  
            </result>
        </action>
        
        <!--验证用户名-->
        <action name="ajaxValidateNickname" class="org.photography.action.AjaxValidateAction"  method="ajaxValidateNickname">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>  
                <param name="inputName">inputStream</param>  
            </result>
        </action>
        
        <!--验证验证码-->
        <action name="ajaxValidateVerifyCode" class="org.photography.action.AjaxValidateAction"  method="ajaxValidateVerifyCode">
            <result name="success" type="stream">
                <param name="contentType">text/html</param>  
                <param name="inputName">inputStream</param>  
            </result>
        </action>
        
    </package>  
     
  
</struts>  